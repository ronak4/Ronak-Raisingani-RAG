# RAG News Generation System - Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
CONGRESS_API_KEY=your_congress_api_key_here

# Optional: Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Optional: Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:19092
KAFKA_GROUP_ID=news-generation


# Optional: Performance Tuning
MAX_CONCURRENT_TASKS=1
HTTP_TIMEOUT=30.0
MAX_RETRIES=3
RETRY_DELAY=1.0

# Optional: Caching
CACHE_TTL_HOURS=24
CACHE_DIR=cache

# Optional: Logging
LOG_LEVEL=INFO
VERBOSE=false
